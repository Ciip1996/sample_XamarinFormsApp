<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ProyectoFinal"
             x:Class="ProyectoFinal.Views.AddCantidadProducto"
             xmlns:lv="clr-namespace:Xamarin.Forms.MultiSelectListView;assembly=Xamarin.Forms.MultiSelectListView">
    <ContentPage.Content>
        
        <StackLayout Orientation="Vertical">
            <ListView x:Name="lstCantidad" 
                      HasUnevenRows="true"
                      SeparatorVisibility="Default"
                      RowHeight="60"
                      ItemsSource="{Binding listaProductos}"
                      lv:MultiSelect.Enable="true">
                
                <ListView.ItemTemplate>
                    <DataTemplate>
                        
                        <lv:SelectableCell x:Name="SelectableCell">
                            <lv:SelectableCell.DataView>
                            
                                <StackLayout Orientation="Horizontal" HorizontalOptions="Fill">
                                    <StackLayout Orientation="Horizontal" HorizontalOptions="StartAndExpand">
                                        <Label Text = "{Binding descripcion}" FontSize="24" HorizontalOptions="Start"/>
                                    </StackLayout>
                                    <StackLayout Orientation="Horizontal" HorizontalOptions="EndAndExpand">
                                        <Button x:Name="btnMenos" Text="-" Scale="0.5" HorizontalOptions="End" Clicked="btnMenos_Clicked"/>
                                        <Entry x:Name="txtCant" Text="{Binding cantidad}" Scale="1.5" HorizontalOptions="End"/>
                                        <Button x:Name="btnMas" Text="+" Scale="0.5" HorizontalOptions="End" Clicked="btnMas_Clicked"/>
                                    </StackLayout>
                                </StackLayout>
                                
                            </lv:SelectableCell.DataView>
                        </lv:SelectableCell>
                        
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
            <Button Text="Siguiente" HorizontalOptions="CenterAndExpand" VerticalOptions="Center"
                    Clicked="btnAddInfo_Clicked"/>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>
